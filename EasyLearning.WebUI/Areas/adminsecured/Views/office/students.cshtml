@using EasyLearning.Domain.Entity;
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Student>

@{
    ViewBag.Title = "students";
}

<div>
    <section class="content-header">
        <h1>
            @ViewBag.DepartmentName
            <small> Students</small>
        </h1>
       
    </section>
    <section class="content">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">All Students</h3>
                    </div>
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                            @TempData["error"]
                        </div>
                    }
                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h4>	<i class="icon fa fa-check"></i> Alert!</h4>
                            @TempData["success"]
                        </div>
                    }
                    <div class="box-body no-padding">

                        @if (Model.Count == 0)
                        {
                            @: No Student Yet
                        }
                        else
                        {
                            int studentCount = 0;

                            <table class="table table-responsive table-hover">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Name</th>
                                        <th>RegNo</th>
                                        <th>Level</th>
                                        <th>Age</th>
                                        <th>Courses</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <td>@(++studentCount)</td>
                                            <td>@Html.DisplayFor(x => student.AppUser.FullName)</td>
                                            <td>@Html.DisplayFor(x => student.RegNo)</td>
                                            <td>@Html.DisplayFor(x => student.Level)</td>
                                            <td>@Html.DisplayFor(x => student.AppUser.Age)</td>
                                            <td>@Html.ActionLink("Courses", "student-courses", new { RegNo = student.RegNo }, new { @class = "btn btn-flat btn-primary" })</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }

                    </div>

                </div>
            </div>
        </div>
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
@section styles{
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}