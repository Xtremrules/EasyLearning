@model EasyLearning.Domain.Entity.Student

@{
    ViewBag.Title = "profile";
}

<div class="content-header">
    <h2>User Profile</h2>
</div>
<div class="content">
    <div class="row">
        <div class="col-md-6">
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.AppUser.FirstName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AppUser.FirstName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AppUser.LastName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AppUser.LastName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AppUser.MiddleName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AppUser.MiddleName)
                    </dd>

                    <dt>
                       @Html.DisplayName("User Name")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AppUser.UserName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AppUser.DateOfBirth)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AppUser.DateOfBirth)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AppUser.State)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AppUser.State)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AppUser.Age)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AppUser.Age)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AppUser.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AppUser.Email)
                    </dd>

                    <dt>
                        @Html.DisplayName("Department")
                    </dt>
                    <dd>
                        @Html.DisplayFor(x => x.Department.Name)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="col-md-6">
            <p>
                <img src="@Url.Action("Image")" alt="@Model.AppUser.FullName" />
            </p>
        </div>
    </div>
</div>
