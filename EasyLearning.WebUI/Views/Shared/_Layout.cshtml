<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EasyLearn App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-success">

    <div class="container" style="background-color:white; width:100%; margin-bottom:0px; padding:0px; border-bottom:5px solid rgba(0,70,120,1.5)">


        <div class="col-md-3" style="height:160%; margin-right:5px; padding-top:5px;float:right">


            <div class="panel panel-success" style="padding:0px">
                <div class=" panel-heading">
                    <h3 class="panel-title">SEARCH OUR SITE</h3>
                </div>
                <div class="panel-body" style="padding-top: 10px; padding-bottom:5px; margin-top:40px">
                    @*@using (Html.BeginForm("SearchIndex", "Home", FormMethod.Get, new { @role = "form" }))*@


                    <div class="form-group">
                        <div class="input-group">

                            <input class="form-control input-block-level" type="text" name="searchString" placeholder="Search...">
                            <div class="input-group-addon"><button type="submit" class="btn-search"><i class="fa fa-search"></i></button></div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>

    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collaspe" data-target=".Header">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("EasyLearning", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse Header">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")@*<span style="color:white;font-weight:bolder">HOME</span>*@ </li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")@*<span style="color:white;font-weight:bolder">CONTACT</span>*@</li>
                </ul>
                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    @Html.Partial("_PartialNonso")

    <div class="container body-content">
        <div>
            @RenderSection("Golden", required: false)
        </div>
        @RenderBody()
        <hr />
    </div>

    @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@




    <footer>
        <div class="navbar navbar-default navbar-static-bottom" style="color:black;border-radius:0px;margin-bottom:0px;line-height:50px;background-color:rgba(0,70,130,1.5)">
            <h4 style="text-align:center;font-size:20px;color:white;font-weight:bolder"> @Html.Partial("_Footer") </h4>

        </div>
    </footer>

    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>